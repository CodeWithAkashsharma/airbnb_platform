<%- include('../partials/head') %>
  </head>
  <body>
      <%- include('../partials/nav') %>
      <main class="max-w-6xl mx-auto mt-20 px-4">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <div class="grid grid-cols-1 md:grid-cols-2">

            <!-- Image column -->
            <div class="relative">
              <img src="<%= home.image %>" alt="<%= home.homeName %>" class="w-full h-80 md:h-full object-cover" />

              <div class="absolute top-4 left-4 bg-white bg-opacity-90 text-red-600 px-3 py-1 rounded-md font-semibold">₹<%= home.price %>/night</div>
              <div class="absolute top-4 right-4 bg-white bg-opacity-90 text-yellow-400 px-2 py-1 rounded-md font-semibold"><%= home.rating %> ★</div>
            </div>

            <!-- Details column -->
            <div class="p-6 md:p-8 flex flex-col justify-between">
              <div>
                <h2 class="text-2xl md:text-3xl font-bold text-red-500 mb-2"><%= home.homeName %></h2>
                <p class="text-sm text-gray-500 mb-4"> <%= home.location %> </p>

                <section class="prose text-gray-700">
                  <h3 class="text-lg font-semibold text-gray-800">About this place</h3>
                  <p class="mt-2"><%= home.description %></p>
                </section>

                <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4">
                  <div class="bg-gray-50 border border-gray-100 rounded-md p-3">
                    <div class="text-xs text-gray-500">Price</div>
                    <div class="text-lg font-semibold text-red-600">₹<%= home.price %> / night</div>
                  </div>

                  <div class="bg-gray-50 border border-gray-100 rounded-md p-3">
                    <div class="text-xs text-gray-500">Rating</div>
                    <div class="text-lg font-semibold text-yellow-400"><%= home.rating %> ★</div>
                  </div>
                </div>

              </div>

              <div class="mt-6 flex items-center gap-3">
                <div>
                  <%- include('../partials/favourite',{home:home}) %>
                </div>

                <a href="/Homes-list" class="ml-auto inline-flex items-center gap-2 bg-red-100 text-red-600 px-4 py-2 rounded-md hover:bg-red-200 transition">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path></svg>
                  Back to homes
                </a>
              </div>
            </div>

          </div>
        </div>
      </main>
  </body>
</html>