<%- include('../partials/head') %>
</head>
<body >
    <%- include('../partials/nav') %>
<section class="bg-red-50/30 border-b border-red-100 py-8">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center gap-4">
      <div class="bg-red-100 text-red-600 p-3 rounded-md">
 <svg class="w-6 h-6 shrink-0" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M20.8 4.6a5.5 5.5 0 00-7.8 0L12 5.6l-1-1a5.5 5.5 0 00-7.8 7.8l1 1L12 21l7.8-7.6 1-1a5.5 5.5 0 000-7.8z"/>
          </svg>      </div>
      <div>
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-red-500">Your favourites</h1>
        <p class="text-sm text-gray-600 mt-1">Homes you've marked as favourite — come back anytime to view them.</p>
      </div>
    </div>
  </div>
</section>

<main class="max-w-6xl mx-auto px-4 py-12">
  <% if (!favouriteHomes || favouriteHomes.length === 0) { %>
    <div class="text-center py-20">
      <p class="text-gray-500">You haven't added any favourites yet. Browse <a href="/Homes-list" class="text-red-500 font-semibold">available homes</a> and tap the heart to save them.</p>
    </div>
  <% } else { %>

  <div class="grid gap-10 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <% favouriteHomes.forEach(home => { %>
      <article class="bg-white border border-gray-100 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition transform hover:-translate-y-1 flex flex-col">
        <div class="relative">
          <img src="<%= home.image %>" alt="<%= home.homeName %>" class="w-full h-40 sm:h-44 md:h-48 object-cover" />
          <div class="absolute right-3 top-3 bg-white bg-opacity-90 text-red-600 px-3 py-1 rounded-md font-semibold text-sm">₹<%= home.price %></div>
          <div class="absolute left-3 top-3 bg-white bg-opacity-90 text-yellow-400 px-2 py-1 rounded-md font-semibold text-sm"><%= home.rating %> ★</div>
        </div>

        <div class="p-5 flex-1 flex flex-col">
          <h3 class="font-semibold text-lg text-gray-800 mb-1"><%= home.homeName %></h3>
          <div class="text-sm text-gray-600 mb-2"><%= home.location %></div>
          <p class="text-sm text-gray-500 line-clamp-4 mb-4 flex-1"> <%= home.description ? home.description : '' %></p>

          <div class="mt-3 flex items-center justify-between">
            <a href="/homes/<%= home._id %>" class="inline-flex items-center gap-2 text-sm bg-gray-100 text-black-600 px-4 py-2 rounded-md hover:bg-gray-200  font-medium">View</a>

            <form action="/delete-favourite/<%= home._id %>" method="POST">
              <button type="submit" class="inline-flex items-center gap-2 text-red-600 text-sm bg-red-100 px-3 py-2 rounded-md hover:bg-red-200 cursor-pointer">
                <i class="fa-solid fa-trash"></i>
                Remove
              </button>
            </form>
          </div>
        </div>
      </article>
    <% }); %>
  </div>

  <% } %>
</main>

</body>
</html>