<%- include('../partials/head') %>
</head>

<body class="flex flex-col bg-gray-50 min-h-screen">
  <%- include('../partials/nav') %>

  <div class="flex-1 flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-lg">

      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Create Account</h1>
        <p class="text-gray-600">Join our community</p>
      </div>

      <!-- Form Card -->
      <form
        method="post"
        action="/signup"
        class="bg-white rounded-xl shadow-md p-6 sm:p-8 space-y-4"
      >
        <%- include('../partials/error') %>

        <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
          <div class="space-y-2">
            <label class="block text-sm font-semibold text-gray-700">
              First Name
            </label>
            <div class="relative">
              <span class="absolute left-3 top-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>
              <input
                type="text"
                name="firstname"
                placeholder="akash"
                value="<%= oldInput.firstname ? oldInput.firstname : '' %>"
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition"
                required
              />
            </div>
          </div>

          <div class="space-y-2">
            <label class="block text-sm font-semibold text-gray-700">
              Last Name
            </label>
            <div class="relative">
              <span class="absolute left-3 top-3 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                  />
                </svg>
              </span>
              <input
                type="text"
                name="lastname"
                placeholder="sharma"
                value="<%= oldInput.lastname ? oldInput.lastname : '' %>"
                class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition"
              />
            </div>
          </div>
        </div> 

        <!-- Email -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">
            Email Address
          </label>
          <div class="relative">
            <span class="absolute left-3 top-3.5 text-gray-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                />
              </svg>
            </span>
            <input
              type="email"
              name="email"
              placeholder="you@example.com"
              value="<%= oldInput.email ? oldInput.email : '' %>"
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition"
              required
            />
          </div>
        </div>

        <!-- Password -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">
            Password
          </label>
          <div class="relative">
            <span class="absolute left-3 top-3.5 text-gray-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                />
              </svg>
            </span>
            <input
              type="password"
              name="password"
              placeholder="••••••••"
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition"
              required
            />
          </div>
        </div>

        <!-- Confirm Password -->
        <div class="space-y-2">
          <label class="block text-sm font-semibold text-gray-700">
            Confirm Password
          </label>
          <div class="relative">
            <span class="absolute left-3 top-3.5 text-gray-600">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                />
              </svg>
            </span>
            <input
              type="password"
              name="confirmpassword"
              placeholder="••••••••"
              class="w-full pl-10 pr-4 py-2 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition"
              required
            />
          </div>
        </div>

        <!-- User Type -->
        <select
          id="usertype"
          name="usertype"
          required
          class="w-full px-4 py-2.5 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition cursor-pointer"
        >
          <option value="user" <%= oldInput && oldInput.usertype === "user" ? "selected" : "" %>>
            User
          </option>
          <option value="host" <%= oldInput && oldInput.usertype === "host" ? "selected" : "" %>>
            Host
          </option>
        </select>

        <!-- Terms Checkbox -->
        <div class="flex items-start gap-3 pt-2">
          <input
            type="checkbox"
            id="termCondition"
            name="termCondition"
            required
            class="w-5 h-5 mt-0.5 rounded cursor-pointer accent-red-400"
          />
          <label for="termCondition" class="text-sm text-gray-700">
            I agree to the <span class="font-semibold">Terms and Conditions</span>
          </label>
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full bg-red-500 hover:bg-red-600 active:bg-red-700 text-white font-semibold py-3 rounded-lg transition duration-200 mt-6 shadow-md hover:shadow-lg"
        >
          Sign Up
        </button>

        <!-- Login Link -->
        <p class="text-center text-sm text-gray-600 pt-2">
          Already have an account?
          <a href="/login" class="text-red-500 hover:text-red-600 font-semibold">
            Log in
          </a>
        </p>
      </form>
    </div>
  </div>
</body>
</html>
