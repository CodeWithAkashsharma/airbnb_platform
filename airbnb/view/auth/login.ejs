<%- include('../partials/head') %>
  </head>

  <body class="flex flex-col bg-gray-50 min-h-screen">
    <%- include('../partials/nav') %>

    <div class="flex-1 flex items-center justify-center px-4 py-10">
      <div class="w-full max-w-md">
        <!-- Header -->
        <div class="text-center mb-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-2">Welcome Back</h1>
          <p class="text-gray-600">Login to your account</p>
        </div>

        <!-- Form Card -->
        <form method="post" action="/login"
          class="bg-white rounded-xl shadow-md p-8 space-y-5">
         
<%- include('../partials/error') %>

          <!-- Email/Username -->
          <div class="space-y-2">
            <label class="block text-sm font-semibold text-gray-700">Email</label>
            <div class="relative">
              <span class="absolute left-3 top-3.5 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </span>
              <input type="email" name="email" placeholder="you@example.com" value="<%= oldInput.email ? oldInput.email:'' %>"
                class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition" required />
            </div>
          </div>

          <!-- Password -->
          <div class="space-y-2">
            <label class="block text-sm font-semibold text-gray-700">Password</label>
            <div class="relative">
              <span class="absolute left-3 top-3.5 text-gray-600">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                </svg>
              </span>
              <input type="password" name="password" placeholder="••••••••"
                class="w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg outline-none focus:ring-2 focus:ring-red-400 focus:border-transparent transition" required />
            </div>
          </div>

          <!-- Submit Button -->
          <button type="submit"
            class="w-full bg-red-500 hover:bg-red-600 active:bg-red-700 text-white font-semibold py-3 rounded-lg transition duration-200 mt-6 shadow-md hover:shadow-lg">
            Login
          </button>

          <!-- Signup Link -->
          <p class="text-center text-sm text-gray-600 pt-2">
            Don't have an account? <a href="/signup" class="text-red-500 hover:text-red-600 font-semibold">Sign up</a>
          </p>
        </form>

        <!-- Forgot Password Link
        <p class="text-center text-xs text-gray-500 mt-6">
          <a href="#" class="text-red-500 hover:text-red-600">Forgot your password?</a>
        </p> -->
      </div>
    </div>
  </body>

</html>