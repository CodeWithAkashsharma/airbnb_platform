<%- include('../partials/head') %>
</head>
<body>

<%- include('../partials/nav') %>
<section class="bg-red-50/30 border-b border-red-100 py-8">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex items-center gap-4">
      <div class="bg-red-100 text-red-600 p-3 rounded-md">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9.75L12 4l9 5.75V19a1 1 0 01-1 1h-5v-5H9v5H4a1 1 0 01-1-1V9.75z"></path></svg>
      </div>
      <div>
        <h1 class="text-2xl sm:text-3xl md:text-4xl font-bold text-red-500">Welcome, host!</h1>
        <p class="text-sm text-gray-600 mt-1">Registered homes appear below. Use the actions to edit or remove listings.</p>
      </div>
    </div>
  </div>
</section>

<main class="max-w-6xl mx-auto px-4 py-8">
  <% if (!body || body.length === 0) { %>
    <div class="text-center py-12">
      <p class="text-gray-500">You have no registered homes yet. <a href="/host/add-home" class="text-red-500 font-semibold">Add one now</a>.</p>
    </div>
  <% } else { %>

  <div class="grid gap-8 sm:grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4">
    <% body.forEach(item => { %>
      <article class="bg-white border border-gray-100 rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition transform hover:-translate-y-1">
        <div class="relative">
          <img src="<%= item.image %>" alt="<%= item.homeName %>" class="w-full h-44 sm:h-48 object-cover" />
          <div class="absolute right-3 top-3 bg-white bg-opacity-90 text-red-600 px-3 py-1 rounded-md font-semibold text-sm">₹<%= item.price %></div>
          <div class="absolute left-3 top-3 bg-white bg-opacity-90 text-yellow-400 px-2 py-1 rounded-md font-semibold text-sm"><%= item.rating %> ★</div>
        </div>

        <div class="p-4 flex flex-col gap-2">
          <h3 class="font-semibold text-lg text-gray-800 truncate"><%= item.homeName %></h3>
          <div class="text-sm text-gray-600 truncate"><%= item.location %></div>
          <p class="text-sm text-gray-500 line-clamp-3"> <%= item.description ? item.description : '' %></p>

          <div class="mt-3 flex items-center justify-between">
            <div class="flex gap-2">
              <a href="edit-home/<%=item._id%>?editing=true" class="inline-flex items-center gap-2 text-sm bg-blue-100 px-3 py-1 rounded-md hover:bg-blue-200 transition">
                <i class="fa-solid fa-pen-to-square"></i>
                <span>Edit</span>
              </a>
              <form action="/host/delete-home/<%= item._id %>" method="POST" onsubmit="return confirm('Delete this home?')">
                <button type="submit" class="inline-flex items-center gap-2 text-sm bg-red-100 px-3 py-1 rounded-md hover:bg-red-200 transition">
                  <i class="fa-solid fa-trash"></i>
                  <span>Delete</span>
                </button>
              </form>
            </div>
          </div>
        </div>
      </article>
    <% }) %>
  </div>

  <% } %>
</main>

</body>
</html>